<Vertex Shader>
#version 150

uniform mat4 mvp_mat;

in vec2 position;
in vec2 in_uv;

out vec2 uv;

void main() {

    uv = in_uv;
    gl_Position = mvp_mat * vec4(position, 0.0, 1.0);

}
<Vertex Shader>

<Fragment Shader>
#version 150

uniform vec4 color;
uniform bool tex_enabled = true;
uniform sampler2D tex;

in vec2 uv;

out vec4 out_color;

void main() {

    out_color = (tex_enabled) ? (texture(tex, uv) * color) : color;

}
<Fragment Shader>